<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="200"
             x:Class="MarketProject.Controls.RestoringData_MsgBox"
             FontFamily="{StaticResource FilsonPro}"
             Height="180"
             Width="450">
    
    <Border Width="430" Height="150" BoxShadow="0 0 22 0 #3374B9" CornerRadius="5"
            BorderBrush="White" BorderThickness="2">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="32">
            <TextBlock Text="Importando dados de dd/mm/yyyy" HorizontalAlignment="Center" FontSize="22" FontWeight="Bold"/>
            <ProgressBar Background="#B3DBDBDA" Width="406" Height="20" Foreground="#6EA759" ShowProgressText="True" FontWeight="Medium"/>
        </StackPanel>
    </Border>

</UserControl>